# Replit Environment Configuration for AI Coaching Conversation Web App
# Set these variables in Replit's Secrets tab (Tools â†’ Secrets)

# REQUIRED API Keys - Set these in Replit Secrets
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI Configuration
REACT_APP_OPENAI_API_URL=https://api.openai.com/v1/chat/completions
REACT_APP_OPENAI_MODEL=gpt-3.5-turbo
REACT_APP_OPENAI_MAX_TOKENS=1000
REACT_APP_OPENAI_TEMPERATURE=0.7

# ElevenLabs Configuration
REACT_APP_ELEVENLABS_API_URL=https://api.elevenlabs.io/v1/speech-to-text

# App Configuration
REACT_APP_APP_NAME=AI Coaching Conversation
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_VOICE_MODE=true
REACT_APP_ENABLE_TEXT_MODE=true
REACT_APP_ENABLE_DEMO_MODE=false

# Security
REACT_APP_ENABLE_API_KEY_VALIDATION=true
REACT_APP_MAX_MESSAGE_LENGTH=2000

# Performance
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_DURATION=300000

# Replit Specific
NODE_ENV=production
PORT=3000
